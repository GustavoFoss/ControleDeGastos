          }
        },
        "additionalProperties": false
      },
      "FinalidadeCategoria": {
        "enum": [
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      },
      "PessoaDto": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "nullable": true
          },
          "idade": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "TipoTransacao": {
        "enum": [
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "TransacaoDto": {
        "type": "object",
        "properties": {
          "descricao": {
            "type": "string",
            "nullable": true
          },
          "valor": {
            "type": "number",
            "format": "double"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoTransacao"
          },
          "pessoaId": {
            "type": "string",
            "format": "uuid"
          },
          "categoriaId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      }
    }
